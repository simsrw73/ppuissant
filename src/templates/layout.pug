doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        title #{name} - #{desc}
        meta(
            name='viewport',
            content='width=device-width, initial-scale=1, user-scalable=0, maximum-scale=1.0'
        )
        meta(name='description', content=desc)
        include components/favicons
        link(rel='stylesheet', href='style/index.scss')

    body
        .uk-container.uk-container-medium.uk-container-center
            include components/header.pug
            block content
            include components/footer.pug

        script(src='app/index.js')
